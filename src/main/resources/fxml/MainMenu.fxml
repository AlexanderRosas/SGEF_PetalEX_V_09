<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.effect.ColorAdjust?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.sgef_petalex_v_09.controllers.MainMenuController">

    <!-- Usuario estático en esquina superior derecha -->
    <Label text="Bienvenido admin"
           styleClass="user-label"
           AnchorPane.topAnchor="10.0"
           AnchorPane.rightAnchor="10.0" />

    <!-- Logo y título centrados -->
    <VBox alignment="CENTER" spacing="10"
          AnchorPane.topAnchor="20.0"
          AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0">
        <padding>
            <Insets topRightBottomLeft="10.0"/>
        </padding>
        <ImageView fitWidth="450" preserveRatio="true">
            <styleClass>
                <String fx:value="image-logo"/>
            </styleClass>
            <image>
                <Image url="@../images/index_blooms_logo.png"/>
            </image>
        </ImageView>
        <Label text="Sistema de Gestión de Exportación de Flores"
               styleClass="title-label" />
    </VBox>
    <!-- BOTONES -->
    <HBox alignment="CENTER" spacing="30"
          AnchorPane.topAnchor="300.0"
          AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0">
        <padding>
            <Insets topRightBottomLeft="20.0"/>
        </padding>

        <Button fx:id="btnClientes" text="CLIENTES"
                styleClass="menu-button"
                prefWidth="140" prefHeight="100"
                onAction="#onClientes">
            <graphic>
                <ImageView fitWidth="75" preserveRatio="true">
                    <effect>
                        <ColorAdjust brightness="1.0"/>
                    </effect>
                    <styleClass>
                        <String fx:value="image-icon"/>
                    </styleClass>
                    <image>
                        <Image url="@../images/image_cliente.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnVentas" text="VENTAS"
                styleClass="menu-button"
                prefWidth="140" prefHeight="100"
                onAction="#onVentas">
            <graphic>
                <ImageView fitWidth="75" preserveRatio="true">
                    <effect>
                        <ColorAdjust brightness="1.0"/>
                    </effect>
                    <styleClass>
                        <String fx:value="image-icon"/>
                    </styleClass>
                    <image>
                        <Image url="@../images/image_ventas.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnCompras" text="COMPRAS-PEDIDOS"
                styleClass="menu-button"
                prefWidth="140" prefHeight="100"
                onAction="#onCompras">
            <graphic>
                <ImageView fitWidth="75" preserveRatio="true">
                    <effect>
                        <ColorAdjust brightness="1.0"/>
                    </effect>
                    <styleClass>
                        <String fx:value="image-icon"/>
                    </styleClass>
                    <image>
                        <Image url="@../images/image_compras.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnProveedores" text="PROVEEDORES"
                styleClass="menu-button"
                prefWidth="140" prefHeight="100"
                onAction="#onProveedores">
            <graphic>
                <ImageView fitWidth="75" preserveRatio="true">
                    <effect>
                        <ColorAdjust brightness="1.0"/>
                    </effect>
                    <styleClass>
                        <String fx:value="image-icon"/>
                    </styleClass>
                    <image>
                        <Image url="@../images/image_proveedores.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnSistema" text="SISTEMA"
                styleClass="menu-button"
                prefWidth="140" prefHeight="100"
                onAction="#onSistema">
            <graphic>
                <ImageView fitWidth="75" preserveRatio="true">
                    <effect>
                        <ColorAdjust brightness="1.0"/>
                    </effect>
                    <styleClass>
                        <String fx:value="image-icon"/>
                    </styleClass>
                    <image>
                        <Image url="@../images/image_sistema.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </HBox>
</AnchorPane>