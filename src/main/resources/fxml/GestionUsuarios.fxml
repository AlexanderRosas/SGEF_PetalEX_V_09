<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.example.sgef_petalex_v_09.controllers.GestionUsuariosController"
    fx:id="root"
    styleClass="root"
    prefWidth="800" prefHeight="700">

    <!-- Toolbar: acciones -->
    <VBox spacing="5" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <HBox spacing="10" styleClass="toolbar-buttons">
            <Button fx:id="btnNuevo" text="Nuevo" onAction="#onNuevo" styleClass="toolbar-button">
                <graphic>
                    <ImageView fitWidth="16" preserveRatio="true">
                        <image>
                            <Image url="@../images/icon_new.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="btnEditar" text="Editar" onAction="#onEditar" styleClass="toolbar-button"
                disable="true">
                <graphic>
                    <ImageView fitWidth="16" preserveRatio="true">
                        <image>
                            <Image url="@../images/icon_role.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button fx:id="btnReactivar" text="Activar/Inactivar" onAction="#onReactivar"
                styleClass="toolbar-button" disable="true">
                <graphic>
                    <ImageView fitWidth="16" preserveRatio="true">
                        <image>
                            <Image url="@../images/icon_reactivate.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>


            <Button fx:id="btnExportar" text="Exportar" onAction="#onExportar"
                styleClass="toolbar-button">
                <graphic>
                    <ImageView fitWidth="16" preserveRatio="true">
                        <image>
                            <Image url="@../images/icon_export.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="toolbar-filters">
            <TextField fx:id="txtBuscar" promptText="Buscar..." styleClass="search-field" />
            <ComboBox fx:id="cbEstado" promptText="Estado" styleClass="filter-combo" />
        </HBox>
    </VBox>

    <!-- Tabla de Usuarios -->
    <TableView fx:id="tableUsuarios"
        editable="true"
        styleClass="table-clientes"
        AnchorPane.topAnchor="80"
        AnchorPane.leftAnchor="10"
        AnchorPane.rightAnchor="10"
        AnchorPane.bottomAnchor="10">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150" />
            <TableColumn fx:id="colCorreo" text="Correo" prefWidth="200" />
            <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="150" />
            <TableColumn fx:id="colRol" text="Rol" prefWidth="150" editable="true" />
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="100" />
        </columns>
    </TableView>

</AnchorPane>