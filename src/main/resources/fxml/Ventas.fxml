<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.sgef_petalex_v_09.controllers.VentasController"
            styleClass="root"
            fx:id="root"
            prefWidth="1024" prefHeight="768">

    <!-- Volver + Título -->
    <Button fx:id="btnBack"
            onAction="#onBack"
            styleClass="back-button"
            AnchorPane.topAnchor="10"
            AnchorPane.leftAnchor="10"
            text="← Volver" />
    <Label text="Ventas"
           styleClass="header-title"
           AnchorPane.topAnchor="10"
           AnchorPane.leftAnchor="120" />

    <!-- Botones Agregar y Consultar en un HBox con espacio -->
    <HBox spacing="20" AnchorPane.topAnchor="60" AnchorPane.leftAnchor="10">
        <Button fx:id="btnAddVenta"
                onAction="#onAddVenta"
                styleClass="toolbar-button"
                text="Agregar Venta" />
        <Button fx:id="btnViewVenta"
                onAction="#onViewVenta"
                styleClass="toolbar-button"
                text="Consultar Venta" />
    </HBox>

    <Button fx:id="btnActualizarVenta"
            onAction="#onActualizarVenta"
            styleClass="toolbar-button"
            text="Actualizar Venta"
            AnchorPane.topAnchor="60"
            AnchorPane.leftAnchor="270"
            disable="true"/>
    <Button fx:id="btnInactivarVenta"
            onAction="#onInactivarVenta"
            styleClass="toolbar-button"
            text="Eliminar Venta"
            AnchorPane.topAnchor="60"
            AnchorPane.leftAnchor="410"
            disable="true"/>

    <!-- Tabla de Ventas realizadas -->
    <TableView fx:id="tableVentas"
               AnchorPane.topAnchor="120"
               AnchorPane.leftAnchor="10"
               AnchorPane.rightAnchor="10"
               AnchorPane.bottomAnchor="10">
        <columns>
            <TableColumn fx:id="colCliente" text="Cliente" prefWidth="200" />
            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120" />
            <TableColumn fx:id="colTotal" text="Total" prefWidth="100" />
        </columns>
    </TableView>

</AnchorPane>
