<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import java.lang.String?>
<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.sgef_petalex_v_09.controllers.ClientesController"
            fx:id="root">

    <!-- Botón Volver al Menú Principal, alineado junto al contenido -->
    <Button fx:id="btnBack"
            onAction="#onBack"
            styleClass="back-button"
            AnchorPane.topAnchor="15"
            AnchorPane.leftAnchor="10">
        <graphic>
            <ImageView fitWidth="20" preserveRatio="true">
                <image>
                    <Image url="@../../../../../../../Users/ASUS/Downloads/SGEF_PetalEX_V_09/SGEF_PetalEX_V_09/src/main/resources/images/icon_back.png"/>
                </image>
            </ImageView>
        </graphic>
        <text>
            <String fx:value="Volver"/>
        </text>
    </Button>

    <!-- Título -->
    <Label text="Clientes"
           styleClass="header-title"
           AnchorPane.topAnchor="12"
           AnchorPane.leftAnchor="120" />

    <!-- Barra de herramientas (CRUD) -->
    <HBox spacing="10" styleClass="toolbar-buttons"
          AnchorPane.topAnchor="45">
        <Button fx:id="btnNuevo" text="Nuevo" onAction="#onNuevo" styleClass="toolbar-button">
            <graphic>
                <ImageView fitWidth="16" preserveRatio="true">
                    <image>
                        <Image url="@../../../../../../../Users/ASUS/Downloads/SGEF_PetalEX_V_09/SGEF_PetalEX_V_09/src/main/resources/images/icon_new.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnEditar" text="Editar" onAction="#onEditar" styleClass="toolbar-button">
            <graphic>
                <ImageView fitWidth="16" preserveRatio="true">
                    <image>
                        <Image url="@../../../../../../../Users/ASUS/Downloads/SGEF_PetalEX_V_09/SGEF_PetalEX_V_09/src/main/resources/images/gestion_usuarios.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar" styleClass="toolbar-button">
            <graphic>
                <ImageView fitWidth="16" preserveRatio="true">
                    <image>
                        <Image url="@../../../../../../../Users/ASUS/Downloads/SGEF_PetalEX_V_09/SGEF_PetalEX_V_09/src/main/resources/images/icon_delete.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnRefrescar" text="Refrescar" onAction="#onRefrescar" styleClass="toolbar-button">
            <graphic>
                <ImageView fitWidth="16" preserveRatio="true">
                    <image>
                        <Image url="@../../../../../../../Users/ASUS/Downloads/SGEF_PetalEX_V_09/SGEF_PetalEX_V_09/src/main/resources/images/icon_reactivate.png"/>
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <Button fx:id="btnBuscar" text="Buscar" onAction="#onBuscar" styleClass="toolbar-button">
        </Button>
    </HBox>

    <!-- Tabla de clientes -->
    <TableView fx:id="tablaClientes"
               styleClass="table-clientes"
               AnchorPane.topAnchor="100"
               AnchorPane.leftAnchor="15"
               AnchorPane.rightAnchor="10"
               AnchorPane.bottomAnchor="10">
        <columns>
            <TableColumn fx:id="colId"       text="ID"          prefWidth="80"  />
            <TableColumn fx:id="colNombre"   text="Nombre"      prefWidth="200" />
            <TableColumn fx:id="colDireccion" text="Dirección"   prefWidth="250" />
            <TableColumn fx:id="colTelefono" text="Teléfono"    prefWidth="150" />
            <TableColumn fx:id="colCorreo"   text="Correo"      prefWidth="200" />
        </columns>
    </TableView>

</AnchorPane>
