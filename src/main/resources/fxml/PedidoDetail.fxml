<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="org.example.sgef_petalex_v_09.controllers.PedidoDetailController"
    prefWidth="800" prefHeight="620">

    <!-- Info del cliente (solo lectura) -->
    <GridPane hgap="10" vgap="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10">
        <Label text="Cliente:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label
            fx:id="lblCliente" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label
            text="Fecha Pedido:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <DatePicker
            fx:id="dpFechaPedido" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label
            text="Fecha Exportación:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <DatePicker
            fx:id="dpFechaExport" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label
            text="Estado:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <ComboBox
            fx:id="cbEstadoPedido" promptText="Selecciona estado"
            GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="200" />

        <Label
            text="Guía Aérea:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField
            fx:id="txtGuiaAerea" promptText="Código guía aérea"
            GridPane.rowIndex="4" GridPane.columnIndex="1" />
    </GridPane>


    <!-- Botones de ítems -->
    <HBox spacing="10" AnchorPane.topAnchor="220" AnchorPane.leftAnchor="10">
        <Button fx:id="btnAddItem" text="Agregar Producto" onAction="#onAddItem" />
        <Button fx:id="btnRemoveItem" text="Eliminar Producto" onAction="#onRemoveItem" />
    </HBox>

    <!-- Tabla de Ítems -->
    <TableView fx:id="tableItems"
        AnchorPane.topAnchor="270"
        AnchorPane.leftAnchor="10"
        AnchorPane.rightAnchor="10"
        AnchorPane.bottomAnchor="70">
        <columns>
            <TableColumn fx:id="colItem" text="Item" prefWidth="50" />
            <TableColumn fx:id="colVariedad" text="Variedad" prefWidth="150" />
            <TableColumn fx:id="colLargo" text="Largo" prefWidth="100" />
            <TableColumn fx:id="colPaquete" text="Paquete" prefWidth="150" />
            <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="100" />
            <TableColumn fx:id="colPrecioU" text="Precio U." prefWidth="100" />
            <TableColumn fx:id="colPrecioT" text="Precio T." prefWidth="100" />
        </columns>
    </TableView>


    <!-- Total -->
    <Label text="Total:" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="10" />
    <Label fx:id="lblTotal" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="80" />

    <!-- Botones finales -->
    <HBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10">
        <Button fx:id="btnCancel" text="Cancelar" onAction="#onCancel" />
        <Button fx:id="btnAccept" text="Aceptar Pedido" onAction="#onAccept" />

    </HBox>
</AnchorPane>